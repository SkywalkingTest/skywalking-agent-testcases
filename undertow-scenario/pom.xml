<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apache.skywalking</groupId>
    <artifactId>undertow-scenario</artifactId>
    <version>5.0.0</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <compiler.version>1.8</compiler.version>

        <test.framework.version>2.0.0.Final</test.framework.version>
        <docker.image.version>${test.framework.version}</docker.image.version>
    </properties>

    <name>skywalking-undertow-scenario</name>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.8.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.8.1</version>
        </dependency>
        <dependency>
            <groupId>io.undertow</groupId>
            <artifactId>undertow-core</artifactId>
            <version>${test.framework.version}</version>
        </dependency>
    </dependencies>

    <profiles>
         <profile>
            <!--
                Profile id format is like this:
                ${project.name}-${support.version}
            -->
            <id>undertow-scenario-2.0.13.Final</id>
            <properties>
                <test.framework.version>2.0.13.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.12.Final</id>
            <properties>
                <test.framework.version>2.0.12.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.11.Final</id>
            <properties>
                <test.framework.version>2.0.11.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.10.Final</id>
            <properties>
                <test.framework.version>2.0.10.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.9.Final</id>
            <properties>
                <test.framework.version>2.0.9.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.8.Final</id>
            <properties>
                <test.framework.version>2.0.8.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.7.Final</id>
            <properties>
                <test.framework.version>2.0.7.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.6.Final</id>
            <properties>
                <test.framework.version>2.0.6.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.5.Final</id>
            <properties>
                <test.framework.version>2.0.5.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
            <id>undertow-scenario-2.0.4.Final</id>
            <properties>
                <test.framework.version>2.0.4.Final</test.framework.version>
            </properties>
        </profile>
        <profile>
